{
  "name": "ROMM",
  "version": "2026.03-13",
  "slug": "romm",
  "image": "ghcr.io/ddanii/romm-{arch}",
  "description": "DEVELOPMENT self-hosted rom manager",
  "url": "https://github.com/DDanii/HA-Add-ons-by-DDanii/tree/master/romm",
  "map": ["addon_config:rw", "media:rw", "share:rw"],
  "services": ["mysql:need"],
  "init": false,
  "options": {
    "DB_HOST": "core-mariadb",
    "DB_NAME": "romm",
    "DB_USER": "romm-user",
    "DB_PASSWD": null,
    "ROMM_AUTH_SECRET_KEY": "",
    "SCREENSCRAPER_USER": "",
    "SCREENSCRAPER_PASSWORD": "",
    "RETROACHIEVEMENTS_API_KEY": "",
    "STEAMGRIDDB_API_KEY": "",
    "HASHEOUS_API_ENABLED": true,
    "PLAYMATCH_API_ENABLED": true,
    "LAUNCHBOX_API_ENABLED": true,
    "romm_library": "/media/romm/library",
    "romm_assets": "/config/assets",
    "romm_config": "/config/config",
    "romm_resources": "/media/romm/resources",
    "redis_data": "/media/romm/redis-data"
  },
  "schema": {
    "DB_HOST": "str",
    "DB_NAME": "str",
    "DB_USER": "str",
    "DB_PASSWD": "password",
    "ROMM_AUTH_SECRET_KEY": "password?",
    "SCREENSCRAPER_USER": "str?",
    "SCREENSCRAPER_PASSWORD": "password?",
    "RETROACHIEVEMENTS_API_KEY": "password?",
    "STEAMGRIDDB_API_KEY": "password?",
    "HASHEOUS_API_ENABLED": "bool",
    "PLAYMATCH_API_ENABLED": "bool",
    "LAUNCHBOX_API_ENABLED": "bool",
    "romm_library": "str",
    "romm_assets": "str",
    "romm_config": "str",
    "romm_resources": "str",
    "redis_data": "str"
  },
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Web interface http"
  },
  "ingress": true,
  "ingress_port": 8080,
  "ingress_stream": true,
  "arch": ["amd64", "aarch64"]
}
