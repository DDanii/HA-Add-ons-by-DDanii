#!/usr/bin/bashio

mkdir -p /config/ldap
mkdir -p /config/slapd.d

ln -s /config/ldap /var/lib/
ln -s /config/slapd.d /etc/ldap/

ENV_FILE=/container/environment/50-homeassistant/config.yaml

mkdir -p /container/environment/50-homeassistant

rm -f "$ENV_FILE"
touch "$ENV_FILE"
JSONSOURCE="/data/options.json"
mapfile -t arr < <(jq -r 'keys[]' "${JSONSOURCE}")
for KEY in "${arr[@]}"; do
    if bashio::config.has_value "$KEY"; then
        VALUE=$(bashio::config "$KEY")
        echo "$KEY: $VALUE" >> "$ENV_FILE"
        if [ "$KEY" = "LDAP_TLS_CRT_FILENAME" ] || [ "$KEY" = "LDAP_TLS_KEY_FILENAME" ] ; then
            ln -s "/ssl/$VALUE" "/container/service/slapd/assets/certs/$VALUE"
        fi
    fi
done



/container/tool/run2